{
  "version": "independent",
  "packages": ["scaffolds/*", "components/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "noCi": true,
      "ignorePrepublish": true,
      "ignoreScripts": true,
      "npmClient": "yarn",
      "npmClientArgs": ["--no-optional"]
    },
    "publish": {
      "registry": "http://172.16.9.242:8081/repository/npm-local/",
      "version": ["--conventional-prerelease", "--preid", "beta"],
      "message": "chore(release): publish %s [skip ci]",
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.ts",
        "**/test/**",
        "**/*.npmrc",
        "**/scripts/**"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "includeMergedTags": true,
      "commitHooks": false,
      "forceGitTag": true,
      "message": "chore(release): publish %s [skip ci]",
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.ts",
        "**/test/**",
        "**/*.npmrc",
        "**/scripts/**"
      ]
    }
  }
}
